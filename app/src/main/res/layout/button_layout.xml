<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backgroundButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.riztech.sehatq.widget.SehatqTextView
            android:id="@+id/tvAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tntType="button" />

        <ImageView
            android:id="@+id/ivLeftIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:tint="@color/colorAccent"
            android:layout_marginRight="@dimen/short_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tvAction"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivRightIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:tint="@color/colorAccent"
            android:layout_marginLeft="@dimen/short_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvAction"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>